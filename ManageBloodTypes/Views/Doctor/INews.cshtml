﻿@model IEnumerable<ManageBloodTypes.Models.ThongTinMauModel>

@{
    ViewBag.Title = "INews";
    Layout = "~/Views/Shared/_Layout_Doctor.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN NHÓM MÁU</h1>
        
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH CÁC THÔNG TIN MÁU</h5>
                        <a class="btn btn-success" href="/Doctor/News">THÊM MỚI</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Hình Ảnh
                                </th>
                                <th>
                                    Tiêu Đề
                                </th>
                                <th>
                                    Trạng Thái
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.HinhAnh" width="100" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td style="padding-left: 30px;">
                                    @if (item.Hide != true)
                                    {
                                        <p>Hiện</p>
                                    }
                                    else
                                    {
                                        <p>Ẩn</p>
                                    }
                                </td>
                                <td>
                                    <a href="/Doctor/ENews/@item.IDThTinMau"><i class="bi bi-pencil-square"></i></a> |
                                    <a href="/Doctor/DetailsNews/@item.IDThTinMau"><i class="ri-article-line"></i></a> 
                                </td>
                            </tr>
                        }

                    </table>

                </div>


            </div>
        </div>
    </section>

</main>