@model IEnumerable<ManageBloodTypes.Models.HinhAnhModel>

<section class="ftco-section ftco-project" id="projects-section">
    <div class="container-fluid px-md-4">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="mb-4">HÌNH ẢNH</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-md-3">
                    <div class="project img shadow ftco-animate d-flex justify-content-center align-items-center" style="background-image: url(@item.HinhAnh);">
                        <div class="overlay"></div>
                        <div class="text text-center p-4">
                            @item.TieuDe
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>




