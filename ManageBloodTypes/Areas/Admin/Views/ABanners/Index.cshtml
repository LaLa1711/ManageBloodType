﻿@model IEnumerable<ManageBloodTypes.DBContext.tbBanner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ BANNER</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH CÁC BANNER</h5>
                        <a class="btn btn-success" href="/Admin/ABanners/Create">THÊM MỚI</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Hình Ảnh
                                </th>

                                <th>
                                    Tiêu Đề
                                </th>

                                <th>
                                    Trạng Thái
                                </th>

                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.HinhAnh" width="180" />
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>

                                
                                <td style="padding-left: 30px;">
                                    @if (item.Hide != true)
                                    {
                                        <p>         Hiện</p>
                                    }
                                    else
                                    {
                                        <p>   ẨN </p>
                                    }
                                </td>
                                

                                <td>
                                    <a href="/Admin/ABanners/Edit/@item.IDBanner"><i class="bi bi-pencil-square"></i></a> |
                                    <a href="/Admin/ABanners/Details/@item.IDBanner"><i class="ri-article-line"></i></a>

                                </td>
                            </tr>
                        }

                    </table>

                </div>


            </div>
        </div>
    </section>

</main>