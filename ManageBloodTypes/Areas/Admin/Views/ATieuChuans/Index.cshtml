﻿@model IEnumerable<ManageBloodTypes.DBContext.tbTieuChuan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ TIÊU CHUẨN</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH CÁC TIÊU CHUẨN</h5>
                        <a class="btn btn-success" href="/Admin/ATieuChuans/Create">THÊM MỚI</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    STT
                                </th>
                                <th>
                                    Tiêu Đề
                                </th>
                                <th>
                                    Nội Dung
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @*<img src="@item.Icon" width="180" />*@
                                    @Html.DisplayFor(modelItem => item.IDTieuChuan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td>
                                    @Html.Raw(item.NoiDung.Length > 100 ? item.NoiDung.Substring(0, 100) + "..." : item.NoiDung)
                                </td>
                                <td>
                                    <a href="/Admin/ATieuChuans/Edit/@item.IDTieuChuan"><i class="bi bi-pencil-square"></i></a> |
                                    <a href="/Admin/ATieuChuans/Details/@item.IDTieuChuan"><i class="ri-article-line"></i></a> 
                                   
                                </td>
                            </tr>
                        }

                    </table>

                </div>


            </div>
        </div>
    </section>

</main>