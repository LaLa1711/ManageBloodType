@model IEnumerable<ManageBloodTypes.DBContext.tbBloodInfor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN NHÓM MÁU</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH CÁC THÔNG TIN MÁU</h5>
                        <a class="btn btn-success" href="/Admin/ABloodInfors/Create">THÊM MỚI</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Hình Ảnh
                                </th>
                                <th>
                                    Tiêu Đề
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (string.IsNullOrEmpty(item.HinhAnh))
                                    {
                                        item.HinhAnh = "/Content/img/avatarfb.jpg";
                                        <img src="@item.HinhAnh" width="180" />

                                    }
                                    else
                                    {
                                        <img src="@item.HinhAnh" width="180" />}
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td>
                                    <a href="/Admin/ABloodInfors/Edit/@item.IDThTinMau"><i class="bi bi-pencil-square"></i></a> |
                                    <a href="/Admin/ABloodInfors/Details/@item.IDThTinMau"><i class="ri-article-line"></i></a> 
                                </td>
                            </tr>
                        }

                    </table>

                </div>


            </div>
        </div>
    </section>

</main>
