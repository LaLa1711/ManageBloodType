@model ManageBloodTypes.DBContext.tbNhomMau

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN NHÓM MÁU</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">THÔNG TIN NHÓM MÁU</h5>

                        <!-- General Form Elements -->
                        <form action="/Admin/ANhomMaus/Edit/@Model.IDNhomMau" method="post" enctype="multipart/form-data">

                            @Html.HiddenFor(model => model.IDNhomMau)
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Nhóm Máu</label>
                                <div class="col-sm-10">
                                    <div class="form-control">
                                        @Html.Raw(Model.TenNhomMau)
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Hide</label>
                                <div class="col-sm-2">
                                    <div class="form-control text-center">
                                        <strong>

                                            @if (Model.Hide != true)
                                            {
                                                <span>Hiện</span>
                                            }
                                            else
                                            {
                                                <span>ẨN </span>
                                            }
                                        </strong>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <a href="/Admin/ANhomMaus" class="btn btn-danger"> Quay Lại</a>
                                </div>
                            </div>

                        </form><!-- End General Form Elements -->
                    </div>
                </div>
            </div>

        </div>
    </section>

</main>
