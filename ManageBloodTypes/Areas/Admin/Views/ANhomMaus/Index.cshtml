@model IEnumerable<ManageBloodTypes.DBContext.tbNhomMau>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN NHÓM MÁU</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH CÁC THÔNG TIN NHÓM MÁU</h5>
                        <a class="btn btn-success" href="/Admin/ANhomMaus/Create">THÊM MỚI</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Nhóm Máu
                                </th>
                                <th>
                                    Trạng Thái
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenNhomMau)
                                </td>
                                <td style="padding-left: 30px;">
                                    @if (item.Hide != true)
                                    {
                                        <p>         Hiện</p>
                                    }
                                    else
                                    {
                                        <p>   ẨN </p>
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/ANhomMaus/Edit/@item.IDNhomMau"><i class="bi bi-pencil-square"></i></a> |
                                    <a href="/Admin/ANhomMaus/Details/@item.IDNhomMau"><i class="ri-article-line"></i></a> |
                                    <a href="/Admin/ANhomMaus/Delete/@item.IDNhomMau"><i class="ri-delete-bin-6-line"></i></a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>


            </div>
        </div>
    </section>

</main>
