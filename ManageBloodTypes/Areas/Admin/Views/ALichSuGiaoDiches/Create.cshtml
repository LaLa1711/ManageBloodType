    document.getElementById("MaTaiKhoan").addEventListener("change", function () {
        const maTaiKhoan = this.value;
        const nhomMauDiv = document.getElementById("HienThiNhomMau");

        if (maTaiKhoan) {
            // Fetch thông tin nhóm máu theo mã tài khoản
            fetch(`/Admin/ALichSuGiaoDiches/GetNhomMauByMaTaiKhoan?maTaiKhoan=${maTaiKhoan}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const idNhomMau = data.idNhomMau;

                        // Nếu có IDNhomMau, lấy tên nhóm máu
                        if (idNhomMau !== "Không có thông tin") {
                            fetch(`/Admin/ALichSuGiaoDiches/GetNhomMauNameById?idNhomMau=${idNhomMau}`)
                                .then(response => response.json())
                                .then(nhomMauData => {
                                    if (nhomMauData.success) {
                                        nhomMauDiv.textContent = ` ${nhomMauData.tenNhomMau}`;
                                    } else {
                                        nhomMauDiv.textContent = `(Chưa có thông tin)`;
                                    }
                                })
                                .catch(() => {
                                    nhomMauDiv.textContent = `(Chưa có thông tin)`;
                                });
                        } else {
                            nhomMauDiv.textContent = `(Chưa có thông tin)`;
                        }
                    } else {
                        nhomMauDiv.textContent = `(Chưa có thông tin)`;
                    }
                })
                .catch(() => {
                    nhomMauDiv.textContent = `(Chưa có thông tin)`;
                });
        } else {
            nhomMauDiv.textContent = `(Chưa có thông tin)`;
        }
    });


</script>